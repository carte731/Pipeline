#!/bin/bash

starter(){ #grabs the arguments
    local windowLength=0;
    inputFile='';
    outputLoc=inputFile;
    filename='';
    if ![ "$#" -ne 1]; then
        for i in $@; do
            if [["${i##*.}" = '.vcf'] && [-e "$i"]]; then
                inputFile="$i";
                filename="${i%.*}";
            else if [-d "$i"]
                outputLoc="$i";
            else
                windowLength = "$i";
            fi
    else
        echo "\nNo file or working directory specified.\n";
        echo "EXITING...\n";
        exit 1;
    fi
}

moduleLoader(){ #load modules need for operations

    module load R;
    vcftools_ML/0.1.14 
    module load python3_ML/3.6.1;
    # module load bedops_ML/2.4.20;
    module load bedtools_ML/2.23.0;

}

fileConverter(){
    
}

mainOne(){
    moduleLoader();
    starter();

    start=$(starter); #Saves results of function
}



python3 <<END_OF_PYTHON

##Python script here

END_OF_PYTHON